<% include ./partials/header %>
<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= game.title %></div>
    <form class="ui form" action="/games/<%= game._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Game Name</label>
            <input type="text" name="game[gameName]" value="<%= game.gameName %>">
        </div>
        <div class="field">
            <label>Image url</label>
        <input type="text" name="game[image]" value="<%= game.image %>">
        </div>
        <div class="field">
            <label>Now Playing</label>
            <input type="checkbox" name="games[nowPlaying]">
        </div>
        <div class="field">
            <label>Platform</label>
        <input type="text" name="game[platform]" value="<%= game.platform %>">
        </div>
        <div class="field">
            <label>Genre 1</label>
        <input type="text" name="game[genreOne]" value="<%= game.genreOne %>">
        </div>
        <div class="field">
            <label>Genre 2</label>
        <input type="text" name="game[genreTwo]" value="<%= game.genreTwo %>">
        </div>
        <div class="field">
            <label>Playthrough notes</label>
            <textarea name="game[notes]"><%= game.notess %></textarea>
        </div>
        
        <div class="field">
            <label>Comment</label>
            <textarea name="game[comments]"><%= game.comments %></textarea>
        </div>
        
        <input class="ui blue big inverted button" type="submit">
    </form>
</div>
<% include ./partials/footer %>