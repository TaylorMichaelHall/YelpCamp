<% include ./partials/header %>
<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= pokemon.title %></div>
    <form class="ui form" action="/pokemon/<%= pokemon._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Name</label>
            <input type="text" name="pokemon[pokemonName]" value="<%= pokemon.pokemonName %>">
        </div>
        <div class="field">
            <label>Image</label>
        <input type="text" name="pokemon[image]" value="<%= pokemon.image %>">
        </div>
        <div class="field">
            <label>Type 1</label>
        <input type="text" name="pokemon[typeOne]" value="<%= pokemon.typeOne %>">
        </div>
        <div class="field">
            <label>Image</label>
        <input type="text" name="pokemon[typeTwo]" value="<%= pokemon.typeTwo %>">
        </div>
        <div class="field">
            <label>Body</label>
            <textarea name="pokemon[body]"><%= pokemon.body %></textarea>
        </div>
        
        <input class="ui blue big inverted button" type="submit">
    </form>
</div>
<% include ./partials/footer %>